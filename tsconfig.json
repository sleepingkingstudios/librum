{
  "compilerOptions": {
    "outDir": "./public/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@alerts": ["alerts"],
      "@alerts/*": ["alerts/*"],
      "@api": ["api"],
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@session": ["session"],
      "@session/*": ["session/*"],
      "@store": ["store"],
      "@store/*": ["store/*"],
      "@test-helpers/*": ["test-helpers/*"],
      "@themes": ["themes"],
      "@themes/*": ["themes/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
