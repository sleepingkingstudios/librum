{
  "compilerOptions": {
    "outDir": "./public/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@store": ["store"],
      "@test-helpers/*": ["test-helpers/*"],
      "@themes": ["themes"],
      "@themes/*": ["themes/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
